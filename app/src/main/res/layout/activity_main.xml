<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottomBarrier"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation"
        tools:layout="@layout/fragment_search" />

    <View
        android:id="@+id/view_player_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_92dp"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:background="@drawable/player_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-2dp"/>

    <TextView
        android:id="@+id/tv_on_air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:text="@string/on_air"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintStart_toStartOf="@id/view_player_field"
        app:layout_constraintTop_toTopOf="@id/view_player_field" />

    <ImageView
        android:id="@+id/iv_station_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_2dp"
        android:layout_marginEnd="@dimen/_2dp"
        android:foreground="@drawable/gradient_foreground"
        android:foregroundTintMode="src_over"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/view_player_field"
        app:layout_constraintEnd_toEndOf="@id/tv_station_name"
        app:layout_constraintStart_toStartOf="@id/tv_station_name"
        app:layout_constraintTop_toTopOf="@id/view_player_field"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_station_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:textColor="@color/blue"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintEnd_toStartOf="@id/iv_icon_fav_off"
        app:layout_constraintStart_toEndOf="@id/tv_on_air"
        app:layout_constraintTop_toTopOf="@id/view_player_field"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/iv_icon_fav_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:src="@drawable/ic_favorite_border"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintEnd_toEndOf="@id/view_player_field"
        app:layout_constraintTop_toTopOf="@id/view_player_field"
        app:tint="@color/red" />

    <ImageView
        android:id="@+id/iv_icon_fav_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:src="@drawable/ic_favorite_solid"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintEnd_toEndOf="@id/view_player_field"
        app:layout_constraintTop_toTopOf="@id/view_player_field"
        app:tint="@color/red" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="iv_icon_fav_off, iv_station_logo,
        tv_on_air, tv_station_name, view_player_field, iv_icon_fav_on" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomBarrier"
        app:constraint_referenced_ids="view_player_field, nav_view"
        app:barrierDirection="top"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:background="@drawable/bottom_navi_background"
        app:itemIconTint="@color/item_bottom_navi_color"
        app:itemRippleColor="@color/navi"
        app:itemTextColor="@color/item_bottom_navi_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        android:layout_marginBottom="-1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>